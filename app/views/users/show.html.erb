  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </td>
    <td class="sidebar round">
	  <strong>Ideas:</strong> <%= User.count %> <br /><!-- Update this with the number of ideas when possible -->

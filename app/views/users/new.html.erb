<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class = "fieldtitle">Name</div>
  <div class="field">
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class = "fieldtitle">E-mail</div>
  <div class="field">
    <%= f.text_field :email %>
  </div>
  <div class = "fieldtitle">Password</div>
  <div class="field">
    <%= f.password_field :password %>
  </div>
   <div class = "fieldtitle">Password (Again)</div>
  <div class="field">
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>